generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String    @id @default(uuid())
  email     String    @unique
  name      String?
  createdAt DateTime  @default(now())

  posts     Post[]
}

model Comment {
  id        String    @id @default(uuid())
  text      String
  createdAt DateTime  @default(now())

  post      Post      @relation(fields: [postId], references: [id])
  postId    String
}

enum PostStatus {
  DRAFT
  PUBLISHED
  ARCHIVED
}

model Post {
  id        String     @id @default(uuid())
  title     String
  content   String
  status    PostStatus  @default (DRAFT) 
  createdAt DateTime    @default(now())

  comments  Comment[]
  tags      PostTag[]

  author    User      @relation(fields: [authorId], references: [id])
  authorId  String
}

model Tag {
  id        String    @id             @default(uuid())
  tagName   String
  slug      String    @db.VarChar(100)
  createdAt DateTime  @default(now())

  posts     PostTag[]     
}

model PostTag {
  tag       Tag       @relation(fields: [tagId], references: [id])
  tagId     String

  post      Post      @relation(fields: [postId], references: [id])
  postId    String

  createdAt DateTime  @default(now()) 

  @@id([tagId, postId])
}